{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://anoduck.github.io/timelinejs-json-schema/timelinejs.schema.json",
	"title": "TimelineJs",
	"description": "Schema for TimelineJs JSON data.",
	"type": "object",
	"properties": {
		"title": {
			"description": "A solitary 'slide' object without a date",
			"type": "object",
			"properties": {
				"text": {
					"type": "object",
					"properties": {
						"headline": {
							"type": "string"
						},
						"text": {
							"type": "string"
						}
					}
					"media": {
						"description": "Media Object",
						"$ref": "./timelinejs.media.schema.json"
						}
					}
				}
			}
		},
		"events": {
			"description": "List of 'slide' objects",
			"type": "array",
			
		},
		"eras": {
			"description": "List of 'era' objects",
			"type": "list"
		},
		"scale": {
			"description": "Either human or cosmological. Determines scale of the timeline.",
			"type": "string"
		},
		"required": [ "events" ]
	},
}
